<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <com.makeramen.roundedimageview.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ivMyProfileImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="12dp"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:scaleType="fitCenter"
        app:riv_corner_radius="4dip"
        app:riv_oval="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserName"
        android:id="@+id/tvUserName"
        android:layout_alignParentTop="true"
        android:layout_marginTop="7dp"
        android:fontFamily="sans-serif-medium"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/ivMyProfileImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ScreenName"
        android:id="@+id/tvScreenName"
        android:layout_marginTop="7dp"
        android:layout_alignParentTop="true"
        android:fontFamily="sans-serif-light"
        android:layout_toRightOf="@+id/tvUserName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:id="@+id/tvRelativeTIme"
        android:fontFamily="sans-serif-light"
        android:layout_marginRight="12dp"
        android:layout_marginTop="7dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <com.tachyonlabs.tweety.utils.LinkifiedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvBody"
        android:textColor="#2C3236"
        android:autoLink="all"
        android:linksClickable="true"
        android:textColorLink="#1E97E0"
        android:fontFamily="sans-serif-light"
        android:textSize="15sp"
        android:lineSpacingMultiplier="1.1"
        android:layout_below="@id/tvUserName"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:layout_toRightOf="@+id/ivMyProfileImage" />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:minHeight="1px"
        android:layout_alignParentBottom="true"
        android:background="#E1E8ED" />

</RelativeLayout>
